generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  login     String
  password  String
  version   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Album {
  id       String  @id
  name     String
  year     Int
  artistId String?
}

model Artist {
  id     String  @id
  name   String
  grammy Boolean
}

model Track {
  id       String  @id
  name     String
  artistId String?
  albumId  String?
  duration Int
}

model Favorites {
  id      Int      @id @default(autoincrement())
  artists String[]
  albums  String[]
  tracks  String[]
}
